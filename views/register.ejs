<div class="backg2">
  <div class="container mt-5">
    <h1 class="text-center color1" style="font-family: Lucida Handwriting,cursive;">Sign-up</h1>
    <!-- Makes POST request to /register route -->
    <form action="/register" method="POST">
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control " name="username" style="width:50%;">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" name="password" style="width:50%;">
      </div>
      <button type="submit" class="btn btn-dark">Create Account</button>
    </form>
    <br>
    <br>         
  </div>
  

</div>

